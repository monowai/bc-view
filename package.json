{
  "name": "bc-next",
  "private": true,
  "license": "GPL-3.0-or-later",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "dev": "next dev --turbopack",
    "node-debug": "NODE_OPTIONS='--inspect' next dev",
    "prettier": "prettier --write '**/*.{ts*,json,md,yml,js}' && yarn lint",
    "build": "next build",
    "start": "next start",
    "test:watch": "jest --watch",
    "test": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "lint": "eslint . && markdownlint '**/*.md' --ignore node_modules",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next",
    "deps:check": "yarn outdated",
    "deps:update": "yarn upgrade-interactive",
    "check-imports": "node scripts/check-imports.js",
    "precommit": "lint-staged",
    "prepare": "husky insta ll"
  },
  "dependencies": {
    "@auth0/nextjs-auth0": "^3.8.0",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@hookstate/core": "^4.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/context-async-hooks": "^1.30.1",
    "@opentelemetry/core": "^1.30.1",
    "@opentelemetry/instrumentation": "^0.57.1",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@sentry/nextjs": "^8.53",
    "amqplib": "^0.10.9",
    "critters": "^0.0.25",
    "i18next": "^25.7.1",
    "kafkajs": "^2.0.0",
    "next": "^16.0.7",
    "next-i18next": "^15.0.0",
    "papaparse": "^5.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.0.0",
    "react-hook-form": "^7.43.0",
    "react-i18next": "^16.4.0",
    "react-number-format": "^5.0.0",
    "react-select": "^5.0.0",
    "react-switch": "^7.1.0",
    "sharp": "^0.34.5",
    "simple-git": "^3.25.0",
    "swr": "^2.0.0",
    "yup": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@eslint/eslintrc": "^3",
    "@hookform/resolvers": "^5.2.2",
    "@hookstate/devtools": "^4.0.1",
    "@next/eslint-plugin-next": "^16.0.7",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/amqplib": "^0.10.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.3.15",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "babel-jest": "^30.0.0",
    "eslint": "^9.23.0",
    "eslint-config-next": "^16.0.7",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jest": "^29.0.0",
    "eslint-plugin-jest-dom": "^5.4",
    "eslint-plugin-prettier": "^5.2",
    "eslint-plugin-testing-library": "^7.13.5",
    "husky": "^9.0.11",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-fetch-mock": "^3.0.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.46.0",
    "postcss": "^8.5.1",
    "prettier": "^3.0.0",
    "sass": "^1.83.4",
    "tailwindcss": "^4.0.6",
    "ts-jest": "^29.1.2",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "jest-junit": {
    "output": "reports/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "resolutions": {
    "@types/node": "^24.0.0",
    "@types/papaparse": "^5.3.15",
    "js-yaml": "^4.1.1"
  }
}
